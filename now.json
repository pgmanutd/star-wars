{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/graphql",
      "destination": "packages/server/build/index.js"
    },
    {
      "source": "/api/graphql/(.*)",
      "destination": "packages/server/build/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "packages/client/build/static/$1"
    },
    {
      "source": "/images/(.*)",
      "destination": "packages/client/build/images/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "packages/client/build/favicon.ico"
    },
    {
      "source": "/asset-manifest.json",
      "destination": "packages/client/build/asset-manifest.json"
    },
    {
      "source": "/manifest.json",
      "destination": "packages/client/build/manifest.json"
    },
    {
      "source": "/precache-manifest.(.*)",
      "destination": "packages/client/build/precache-manifest.$1"
    },
    {
      "source": "/service-worker.js",
      "destination": "packages/client/build/service-worker.js"
    },
    {
      "source": "/(.*)",
      "destination": "packages/client/build/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    },
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=0"
        }
      ]
    }
  ]
}
