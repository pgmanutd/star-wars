{
  "name": "star-wars",
  "version": "1.0.0",
  "description": "Search star wars planets",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean -y",
    "clean:build": "lerna run clean:build --stream",
    "start": "lerna run --parallel --stream start",
    "lint": "eslint \"packages/**/src/**/*.{js,jsx}\" --cache --cache-location \".cache/.eslintcache/\"",
    "format": "npm run lint -- --fix",
    "test": "lerna run test --stream",
    "check": "npm run lint && npm run test",
    "build": "lerna run build --stream",
    "serve": "lerna run serve --parallel --stream"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgmanutd/star-wars.git"
  },
  "keywords": [
    "star-wars",
    "react",
    "reacthooks",
    "lerna",
    "monorepo",
    "netlify",
    "lambda",
    "aws-lambda",
    "graphql",
    "apollo-client",
    "express-graphql",
    "hooks",
    "custom-hooks",
    "react-testing-library",
    "lint"
  ],
  "author": "pgmanutd <prashantmanunited@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pgmanutd/star-wars/issues"
  },
  "dependencies": {
    "lerna": "^3.20.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "prettier": "^2.0.5"
  }
}
